{
  "name": "pear.dev",
  "version": "0.0.1",
  "scripts": {
    "dev": "svelte-kit dev",
    "server": "deno run --allow-net server/index.ts",
    "build": "svelte-kit build",
    "package": "svelte-kit package",
    "preview": "svelte-kit preview",
    "lint": "prettier --ignore-path .prettierignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .prettierignore --write --plugin-search-dir=. .",
    "test:back": "deno test server/",
    "test:back:coverage": "deno test server/ --coverage=.cov_profile && deno coverage .cov_profile --exclude=tests/",
    "test:front": "jest tests/",
    "test:front:coverage": "jest --coverage tests/"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@sveltejs/adapter-auto": "next",
    "@sveltejs/kit": "next",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/svelte": "^3.0.3",
    "babel-jest": "^27.5.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.5.0",
    "sass": "^1.49.9",
    "svelte": "^3.44.0",
    "svelte-jester": "^2.3.2",
    "svelte-preprocess": "^4.10.4",
    "the-new-css-reset": "^1.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "type": "module",
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true
        }
      ],
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "svelte"
    ],
    "testPathIgnorePatterns": ["server"]
  },
  "setupFilesAfterEnv": [
    "@testing-library/jest-dom/extend-expect"
  ]
}
